@page
@model Shop.View.Pages.Product.CreateProduct
<h1>Cadastrar Produtos</h1>
<br>
<div >
    <form method="post">
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="product-name">Nome do produto:</label>
      <input type="text" class="form-control" id="nome-produto" required>
    </div>
    <div class="form-group col-md-6">
      <label for="bar-code">Código de barras:</label>
      <input type="text" class="form-control" id="bar-code" required>
    </div>
  </div>
  <div class="form-group col-md-6">
      <label for="price">Preço:</label>
      <input type="text" class="form-control" id="price" required>
    </div>
    <div class="form-group col-md-6">
      <label for="description">Quantidade em estoque:</label>
      <input type="number" min="0" class="form-control" id="description">
    </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="description">Descrição:</label>
      <input type="text" class="form-control" id="description">
    </div>
  </div>
  <br>
  <button type="submit" class="btn btn-primary">Cadastrar</button>
</form>
</div>